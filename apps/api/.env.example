# =============================================
# TrackPro API - Environment Variables
# =============================================
# Copie este arquivo para .env e preencha os valores

# =============================================
# SERVIDOR
# =============================================
NODE_ENV=development
PORT=3001

# =============================================
# URLS (Frontend)
# =============================================
# URL do frontend para CORS e redirecionamentos
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =============================================
# BANCO DE DADOS (MySQL - Prisma)
# =============================================
# Formato: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=mysql://root:password@localhost:3306/trackpro

# =============================================
# JWT & AUTENTICACAO
# =============================================
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua_chave_secreta_jwt_de_64_caracteres_hexadecimais
JWT_EXPIRES_IN=15m

# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REFRESH_SECRET=sua_chave_secreta_refresh_de_64_caracteres_hexadecimais
REFRESH_TOKEN_EXPIRES_DAYS=7

# =============================================
# CRIPTOGRAFIA (MFA)
# =============================================
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=sua_chave_de_criptografia_de_64_caracteres_hexadecimais
MFA_ISSUER=TrackPro

# =============================================
# OAUTH (Google)
# =============================================
# Obtenha em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# =============================================
# OAUTH (GitHub)
# =============================================
# Obtenha em: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/v1/auth/github/callback

# =============================================
# STRIPE (Pagamentos)
# =============================================
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
# Obtenha em: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================
# CLICKHOUSE (Analytics)
# =============================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# =============================================
# REDIS (Cache/Sessions) - Opcional
# =============================================
# Obtenha em: https://upstash.com ou use Redis local
REDIS_URL=redis://localhost:6379

# =============================================
# EMAIL (SendGrid) - Opcional
# =============================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@trackpro.com
