# ======================
# SERVER
# ======================
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ======================
# DATABASE (MySQL)
# ======================
DATABASE_URL="mysql://root:root@localhost:3306/trackpro"

# ======================
# CLICKHOUSE
# ======================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=trackpro
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# ======================
# REDIS
# ======================
REDIS_URL="redis://localhost:6379"

# ======================
# JWT & SECURITY
# ======================
# IMPORTANT: Use at least 32 characters in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
REFRESH_TOKEN_EXPIRES_DAYS=7

# HMAC for SDK signature validation
HMAC_MASTER_SECRET=your-hmac-master-secret-change-in-production

# Encryption key for sensitive data (API keys, tokens)
ENCRYPTION_KEY=your-encryption-key-min-32-characters-in-production

# ======================
# OAUTH PROVIDERS
# ======================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_CALLBACK_URL=http://localhost:3001/api/v1/auth/microsoft/callback

# ======================
# EMAIL
# ======================
# Provider: sendgrid, smtp, or console (default)
EMAIL_PROVIDER=console
EMAIL_FROM=TrackPro <noreply@trackpro.io>

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# SMTP (if EMAIL_PROVIDER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ======================
# STORAGE (S3)
# ======================
# Type: local or s3
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./exports
STORAGE_BASE_URL=http://localhost:3001/exports

# S3 (if STORAGE_TYPE=s3)
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ======================
# ERROR TRACKING (Sentry)
# ======================
SENTRY_DSN=
SENTRY_RELEASE=

# ======================
# BACKUPS
# ======================
BACKUP_ENABLED=false
BACKUP_TEMP_DIR=/tmp/backups
BACKUP_RETENTION_DAYS=30

# ======================
# STRIPE BILLING
# ======================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
# Webhook signing secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=

# ======================
# AUDIT & COMPLIANCE
# ======================
# Number of days to retain audit logs (default: 365)
AUDIT_RETENTION_DAYS=365

# ======================
# MFA
# ======================
# Issuer name shown in authenticator apps
MFA_ISSUER=TrackPro

# ======================
# INTERNAL COMMUNICATION
# ======================
INTERNAL_API_SECRET=your-internal-api-secret
